{
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto npm:vite",
    "build": "deno run -A --node-modules-dir=auto npm:vite build",
    "server:start": "deno run -A --node-modules-dir --watch ./server/main.ts",
    "serve": "deno task build && deno task server:start"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@eslint/js": "npm:@eslint/js@^9.30.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@^1.0.12",
    "@types/react": "npm:@types/react@^19.1.2",
    "@types/react-dom": "npm:@types/react-dom@^19.1.6",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.4.1",
    "eslint": "npm:eslint@^9.30.0",
    "eslint-config-prettier": "npm:eslint-config-prettier@^10.1.5",
    "eslint-plugin-react-dom": "npm:eslint-plugin-react-dom@^1.52.2",
    "eslint-plugin-react-hooks": "npm:eslint-plugin-react-hooks@^5.2.0",
    "eslint-plugin-react-refresh": "npm:eslint-plugin-react-refresh@^0.4.20",
    "eslint-plugin-react-x": "npm:eslint-plugin-react-x@^1.52.2",
    "prettier": "npm:prettier@^3.6.2",
    "react": "npm:react@^19.1.0",
    "react-dom": "npm:react-dom@^19.1.0",
    "react-router-dom": "npm:react-router-dom@^7.5.1",
    "typescript-eslint": "npm:typescript-eslint@^8.35.0",
    "vite": "npm:vite@^6.3.2"
  },
  "compilerOptions": {
    "types": [
      "react",
      "react-dom",
      "@types/react"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
